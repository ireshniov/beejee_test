{% if pageCount > 1 %}
    <ul class="pagination">
        {% if  currentPage == 1 %}
            <li class="page-item previous disabled"><a class="page-link" href="#">Previous</a></li>
        {% else %}
            <li class="page-item previous"><a class="page-link" href="{{ path('task.list', app.request.query.all|merge({'page': currentPage-1})) }}">Previous</a></li>
        {% endif %}

        {% for page in 1..pageCount %}
            {% if currentPage == page %}
                <li class="page-item active"><a class="page-link" href="{{ path('task.list', app.request.query.all|merge({'page': page})) }}">{{ page }}</a></li>
            {% else %}
                <li class="page-item"><a class="page-link" href="{{ path('task.list', app.request.query.all|merge({'page': page})) }}">{{ page }}</a></li>
            {% endif %}
        {% endfor %}
        {% if  currentPage == pageCount %}
            <li class="page-item next disabled"><a class="page-link" href="#">Next</a></li>
        {% else %}
            <li class="page-item previous"><a class="page-link" href="{{ path('task.list', app.request.query.all|merge({'page': currentPage+1})) }}">Next</a></li>
        {% endif %}
    </ul>
{% endif %}